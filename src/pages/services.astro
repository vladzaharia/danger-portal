---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getFeaturedServices, getServicesByCategory, type ServiceCategory } from '../lib/services';

export const prerender = false;

// Get session from middleware - this page is now protected
const session = Astro.locals.session;

// If no session, redirect to login (this should be handled by middleware, but double-check)
if (!session) {
  return Astro.redirect('/');
}

// Get user groups from session
const userGroups = session.groups || [];

// Get featured services and categorized services based on user's groups
const featuredServices = getFeaturedServices(userGroups);
const servicesByCategory = getServicesByCategory(userGroups);

// Check for query parameters to control visibility
const url = Astro.url;
const hideHeader = url.searchParams.get('hideHeader') === 'true';
---

<BaseLayout title="Services - Danger.Direct">
  <div class="animated-bg"></div>

  {!hideHeader && (
    <header class="header glass">
      <div class="header-content">
        <div class="logo-wordmark-small">
          <span class="wordmark-small-line-1">Danger.</span><span class="wordmark-small-line-2">Direct</span>
        </div>
        {session && (
          <div class="user-info">
            <a href="/api/auth/logout" class="logout-button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="16" height="16" fill="currentColor">
                <path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"/>
              </svg>
              Logout
            </a>
          </div>
        )}
      </div>
    </header>
  )}

  <main class="container">
    {/* Featured Services Section */}
    {featuredServices.length > 0 && (
      <section class="services-section">
        <div class="services-grid">
          {featuredServices.map(service => (
            <a href={service.url} class="service-card glass" target="_blank" rel="noopener noreferrer">
              <div class="service-card-content">
                <div class="service-icon" style={`background: ${service.color}20;`}>
                  <img src={service.icon} alt={service.name} />
                </div>
                <div class="service-info">
                  <h3 class="service-name">{service.name}</h3>
                  <p class="service-description">{service.description}</p>
                </div>
              </div>
              <div class="service-url">{service.url}</div>
            </a>
          ))}
        </div>
      </section>
    )}

    {/* Categorized Services Sections */}
    {Array.from(servicesByCategory.entries()).map(([category, services]) => (
      <section class="services-section">
        <h2 class="category-title">{category}</h2>
        <div class="services-grid">
          {services.map(service => (
            <a href={service.url} class="service-card glass" target="_blank" rel="noopener noreferrer">
              <div class="service-card-content">
                <div class="service-icon" style={`background: ${service.color}20;`}>
                  <img src={service.icon} alt={service.name} />
                </div>
                <div class="service-info">
                  <h3 class="service-name">{service.name}</h3>
                  <p class="service-description">{service.description}</p>
                </div>
              </div>
              <div class="service-url">{service.url}</div>
            </a>
          ))}
        </div>
      </section>
    ))}
  </main>

  <style>
    .header {
      position: sticky;
      top: 0;
      z-index: 100;
      margin: 1rem;
      padding: 1rem 1.5rem;
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
    }

    .logo-wordmark-small {
      font-size: 1.5rem;
      font-weight: 900;
      letter-spacing: -0.01em;
    }

    .wordmark-small-line-1 {
      background: linear-gradient(135deg, #3b82f6, #60a5fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .wordmark-small-line-2 {
      background: linear-gradient(135deg, #e91e63, #f06292);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .user-name {
      color: var(--color-text-muted);
      font-size: 0.875rem;
    }

    .logout-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--color-text);
      text-decoration: none;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 0.375rem;
      transition: all 0.2s ease;
      cursor: pointer;
    }

    .logout-button:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
    }

    .logout-button svg {
      flex-shrink: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .services-section {
      margin-bottom: 3rem;
    }

    .category-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: var(--color-text);
      padding-bottom: 0.5rem;
      border-bottom: 2px solid rgba(59, 130, 246, 0.3);
    }

    .section-title {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-align: center;
    }

    .section-description {
      text-align: center;
      color: var(--color-text-muted);
      margin-bottom: 2rem;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .service-card {
      display: flex;
      flex-direction: column;
      padding: 1.5rem;
      text-decoration: none;
      color: inherit;
      transition: all 0.3s ease;
      cursor: pointer;
      gap: 1rem;
    }

    .service-card:hover {
      transform: translateY(-4px);
      background: rgba(255, 255, 255, 0.04);
      box-shadow: 0 8px 32px rgba(59, 130, 246, 0.1);
      border-color: rgba(59, 130, 246, 0.2);
    }

    .service-card-content {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      flex: 1;
    }

    .service-icon {
      width: 3.5rem;
      height: 3.5rem;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 0.75rem;
      padding: 0.625rem;
    }

    .service-icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .service-info {
      flex: 1;
      min-width: 0;
    }

    .service-name {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.375rem;
    }

    .service-description {
      color: var(--color-text-muted);
      font-size: 0.875rem;
      line-height: 1.5;
    }

    .service-url {
      font-size: 0.8125rem;
      color: #3b82f6;
      font-weight: 500;
      padding-left: 4.5rem;
      word-break: break-all;
      transition: color 0.2s ease;
    }

    .service-card:hover .service-url {
      color: #ffffff;
    }

    .service-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #3b82f6;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .service-card:hover .service-link {
      color: #ffffff;
    }

    .service-link svg {
      flex-shrink: 0;
    }

    .cdn-section {
      margin-top: 3rem;
    }

    .cdn-info {
      display: block;
      padding: 2rem;
      padding-bottom: 1rem;
      text-align: center;
    }

    .cdn-header {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .cdn-header h3 {
      font-size: 1.5rem;
      font-weight: 600;
    }

    .cdn-info p {
      color: var(--color-text-muted);
      margin-bottom: 1.5rem;
    }

    .cdn-info code {
      background: rgba(255, 255, 255, 0.1);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-family: 'Courier New', monospace;
    }

    @media (max-width: 768px) {
      .header-content {
        flex-direction: column;
        text-align: center;
      }

      .user-info {
        flex-direction: column;
      }

      .services-grid {
        grid-template-columns: 1fr;
      }

      .service-url {
        padding-left: 0;
        text-align: left;
      }
    }
  </style>

  <script>
    // Sync session data across all storage mechanisms
    if (typeof window !== 'undefined') {
      // Mark as authenticated in localStorage
      localStorage.setItem('authenticated', 'true');

      // Try to sync session data from cookie to localStorage/sessionStorage
      try {
        const cookieMatch = document.cookie.split('; ').find(row => row.startsWith('danger_portal_session='));
        if (cookieMatch) {
          const sessionJson = decodeURIComponent(cookieMatch.split('=')[1]);

          // Save to localStorage
          try {
            localStorage.setItem('danger_portal_session', sessionJson);
          } catch (e) {
            console.warn('Failed to save to localStorage:', e);
          }

          // Save to sessionStorage
          try {
            sessionStorage.setItem('danger_portal_session', sessionJson);
          } catch (e) {
            console.warn('Failed to save to sessionStorage:', e);
          }
        }
      } catch (e) {
        console.warn('Failed to sync session:', e);
      }
    }
  </script>
</BaseLayout>

