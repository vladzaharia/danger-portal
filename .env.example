# PocketID OIDC Configuration
# External URL: Used for frontend redirects and authorization URLs (publicly accessible)
POCKETID_ISSUER=https://id.danger.direct

# Internal URL: Used for server-side OAuth operations (token exchange, userinfo, etc.)
# When running in Docker, this should be the container-to-container URL
# If not set, falls back to POCKETID_ISSUER
POCKETID_ISSUER_INTERNAL=http://pocket-id:8080

CLIENT_ID=danger-portal
CLIENT_SECRET=your_client_secret_here
REDIRECT_URI=https://danger.direct/api/auth/callback

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters_long

# Kiosk Display Configuration
KIOSK_WIFI_SSID=Danger.Direct
KIOSK_WIFI_PASSWORD=your_wifi_password_here
KIOSK_PORTAL_URL=https://danger.direct
